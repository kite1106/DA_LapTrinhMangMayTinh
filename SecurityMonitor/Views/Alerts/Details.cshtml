@model SecurityMonitor.DTOs.Alerts.AlertDetailDto

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">
                        <i class="fas fa-shield-alt"></i>
                        Chi tiết cảnh báo #@Model.Id
                    </h3>
                    <div>
                        <span class="badge bg-@Model.SeverityClass">@Model.SeverityLevel</span>
                        <span class="badge bg-@Model.StatusClass ms-2">@Model.Status</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3 text-muted">Tiêu đề:</div>
                        <div class="col-md-9">@Model.Title</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3 text-muted">Loại cảnh báo:</div>
                        <div class="col-md-9">@Model.AlertType</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3 text-muted">Thời gian:</div>
                        <div class="col-md-9">@Model.Timestamp.ToString("dd/MM/yyyy HH:mm:ss")</div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mb-3">
                            <div class="col-md-3 text-muted">Mô tả:</div>
                            <div class="col-md-9">@Model.Description</div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.SourceIp))
                    {
                        <div class="row mb-3">
                            <div class="col-md-3 text-muted">IP nguồn:</div>
                            <div class="col-md-9">
                                @Model.SourceIp
                                <a href="#" class="btn btn-sm btn-outline-info ms-2" onclick="checkIP('@Model.SourceIp')">
                                    <i class="fas fa-search"></i> Kiểm tra
                                </a>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.TargetIp))
                    {
                        <div class="row mb-3">
                            <div class="col-md-3 text-muted">IP đích:</div>
                            <div class="col-md-9">@Model.TargetIp</div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.AssignedTo))
                    {
                        <div class="row mb-3">
                            <div class="col-md-3 text-muted">Được giao cho:</div>
                            <div class="col-md-9">@Model.AssignedTo</div>
                        </div>
                    }
                    @if (Model.ResolvedAt.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-3 text-muted">Đã xử lý:</div>
                            <div class="col-md-9">
                                @Model.ResolvedAt?.ToString("dd/MM/yyyy HH:mm:ss")
                                @if (!string.IsNullOrEmpty(Model.ResolvedBy))
                                {
                                    <span class="text-muted ms-2">bởi @Model.ResolvedBy</span>
                                }
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Resolution))
                        {
                            <div class="row mb-3">
                                <div class="col-md-3 text-muted">Cách xử lý:</div>
                                <div class="col-md-9">@Model.Resolution</div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-tasks"></i> Hành động</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button class="btn btn-warning" onclick="updateStatus(@Model.Id, 'In Progress')">
                            <i class="fas fa-play"></i> Bắt đầu xử lý
                        </button>
                        <button class="btn btn-success" onclick="resolveAlert(@Model.Id)">
                            <i class="fas fa-check"></i> Đánh dấu đã xử lý
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateStatus(id, status) {
            $.ajax({
                url: `/api/alerts/${id}/status`,
                type: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify({ status: status }),
                success: function() {
                    location.reload();
                },
                error: function(xhr) {
                    alert('Lỗi khi cập nhật trạng thái: ' + xhr.responseText);
                }
            });
        }

        function resolveAlert(id) {
            const resolution = prompt('Nhập cách thức đã xử lý:');
            if (resolution) {
                $.ajax({
                    url: `/api/alerts/${id}/status`,
                    type: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify({ 
                        status: 'Resolved',
                        resolution: resolution
                    }),
                    success: function() {
                        location.reload();
                    },
                    error: function(xhr) {
                        alert('Lỗi khi cập nhật trạng thái: ' + xhr.responseText);
                    }
                });
            }
        }

        function checkIP(ip) {
            window.open(`https://www.abuseipdb.com/check/${ip}`, '_blank');
        }
    </script>
}
