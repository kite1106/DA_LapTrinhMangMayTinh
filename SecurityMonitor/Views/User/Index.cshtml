@using SecurityMonitor.DTOs
@model SecurityMonitor.DTOs.Dashboard.UserDashboardDto

@{
    ViewData["Title"] = "Trang chủ";
    Layout = "_UserLayout";
}

<div class="container-fluid mt-4">
    <!-- Thống kê tổng quan -->
    <div class="row">
        <div class="col-md-4">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h5 class="fw-bold mb-1">Tổng số cảnh báo</h5>
                            <h2 class="mb-0">@Model.TotalAlerts</h2>
                        </div>
                        <div class="ms-3">
                            <i class="fas fa-bell fa-3x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h5 class="fw-bold mb-1">Cảnh báo quan trọng</h5>
                            <h2 class="mb-0">@Model.ImportantAlerts</h2>
                        </div>
                        <div class="ms-3">
                            <i class="fas fa-exclamation-triangle fa-3x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h5 class="fw-bold mb-1">Đăng nhập (7 ngày)</h5>
                            <h2 class="mb-0">@Model.RecentLogins</h2>
                        </div>
                        <div class="ms-3">
                            <i class="fas fa-sign-in-alt fa-3x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cảnh báo và lịch sử đăng nhập -->
    <div class="row">
        <!-- Cảnh báo gần đây -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-bell"></i> Cảnh báo gần đây</h5>
                </div>
                <div class="card-body">
                    @if (!Model.RecentAlerts.Any())
                    {
                        <div class="alert alert-info mb-0">
                            Không có cảnh báo nào.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Thời gian</th>
                                        <th>IP</th>
                                        <th>Mức độ</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var alert in Model.RecentAlerts)
                                    {
                                        <tr>
                                            <td>@alert.Timestamp.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@(alert.SourceIp ?? "N/A")</td>
                                            <td>
                                                <span class="badge bg-@alert.SeverityLevel.ToLower()">
                                                    @alert.SeverityLevel
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@alert.Status</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Lịch sử đăng nhập -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-history"></i> Lịch sử đăng nhập gần đây</h5>
                </div>
                <div class="card-body">
                    @if (!Model.RecentLoginHistory.Any())
                    {
                        <div class="alert alert-info mb-0">
                            Không có lịch sử đăng nhập.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Thời gian</th>
                                        <th>IP</th>
                                        <th>Nguồn</th>
                                        <th>Sự kiện</th>
                                        <th>Trạng thái</th>
                                        <th>Chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var log in Model.RecentLoginHistory)
                                    {
                                        <tr>
                                            <td>@log.Timestamp.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</td>
                                            <td>
                                                <a href="#" class="text-primary" title="Kiểm tra IP">
                                                    @(log.IpAddress ?? "N/A")
                                                </a>
                                            </td>
                                            <td>Authentication</td>
                                            <td>@log.Action</td>
                                            <td>
                                                @if (log.Action.Contains("Failed"))
                                                {
                                                    <span class="badge bg-danger">Thất bại</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Thành công</span>
                                                }
                                            </td>
                                            <td>@log.Details</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>