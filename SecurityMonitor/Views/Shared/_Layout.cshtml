<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Security Monitor</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @* ✅ Xác định returnUrl theo role trước *@
    @{
        string returnUrl = "/Dashboard/UserDashboard";
        if (User.IsInRole("Admin")) returnUrl = "/Dashboard/Admin";
        else if (User.IsInRole("Analyst")) returnUrl = "/Dashboard/Analyst";
    }

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
        <a class="navbar-brand" asp-controller="Alerts" asp-action="Index">🔐 Security Monitor</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Alerts" asp-action="Index">📊 Cảnh báo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Logs" asp-action="Index">📄 Logs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Audit" asp-action="UserActivity" asp-route-userId="@User.Identity.Name">📋 Audit</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Account/Register" asp-area="Identity">📝 Đăng ký</a>
                </li>
            </ul>

            <div class="d-flex align-items-center">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <span class="text-white me-3">👤 @User.Identity.Name</span>
                    <form method="post" asp-page="/Account/Logout" asp-area="Identity" asp-route-returnUrl="@returnUrl">
                        <button type="submit" class="btn btn-outline-danger">🚪 Đăng xuất</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-outline-light" asp-page="/Account/Login" asp-area="Identity">🔐 Đăng nhập</a>
                }
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
