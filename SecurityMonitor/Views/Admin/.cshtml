@model IEnumerable<SecurityMonitor.Models.BlockedIP>
@{
    ViewData["Title"] = "Danh sách IP bị chặn";
    Layout = "_AdminLayout";
}

<div class="container-fluid mt-4">
    <div class="card">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-0"><i class="fas fa-ban"></i> @ViewData["Title"]</h4>
            </div>
            <div>
                <button type="button" class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#blockIPModal">
                    <i class="fas fa-plus"></i> Thêm IP
                </button>
            </div>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center text-muted my-5">
                    <i class="fas fa-shield-alt fa-3x mb-3"></i>
                    <h5>Chưa có IP nào bị chặn</h5>
                    <p>Các IP đáng ngờ hoặc độc hại sẽ xuất hiện ở đây</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Địa chỉ IP</th>
                                <th>Thời gian chặn</th>
                                <th>Lý do</th>
                                <th>Thông tin</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.IpAddress</td>
                                    <td>@item.BlockedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.Reason</td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-link" onclick="checkIP('@item.IpAddress')">
                                            <i class="fas fa-search"></i> Kiểm tra trên AbuseIPDB
                                        </a>
                                    </td>
                                    <td>
                                        <form asp-action="UnblockIP" method="post" style="display: inline">
                                            <input type="hidden" name="ip" value="@item.IpAddress" />
                                            <button type="submit" class="btn btn-sm btn-outline-success">
                                                <i class="fas fa-unlock"></i> Bỏ chặn
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal thêm IP -->
<div class="modal fade" id="blockIPModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="BlockIP" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm IP vào danh sách chặn</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Địa chỉ IP</label>
                        <input type="text" name="ip" class="form-control" required 
                               pattern="^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$"
                               placeholder="Ví dụ: 192.168.1.1">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Thêm vào danh sách chặn</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function checkIP(ip) {
            window.open(`https://www.abuseipdb.com/check/${ip}`, '_blank');
        }
    </script>
}
        {
            <text>
            alert('@TempData["Message"]');
            </text>
        }
    </script>
}