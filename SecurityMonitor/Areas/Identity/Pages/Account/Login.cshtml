@page
@using SecurityMonitor.Extensions
@using SecurityMonitor.Services
@model LoginModel
@{
    ViewData["Title"] = "🔐 Đăng nhập hệ thống";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">🔐 Đăng nhập tài khoản</h3>
                    <small>IP của bạn: @Model.ClientIP</small>
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">📧 Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Mật khẩu" />
                            <label asp-for="Input.Password">🔒 Mật khẩu</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                📌 Ghi nhớ đăng nhập
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-success">
                            ✅ Đăng nhập
                        </button>

                        <div class="mt-3 text-center">
                            <p><a id="forgot-password" asp-page="./ForgotPassword">❓ Quên mật khẩu?</a></p>
                            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">📝 Đăng ký tài khoản mới</a></p>
                            <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">📨 Gửi lại email xác nhận</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 mt-4 mt-md-0">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-secondary text-white text-center">
                    <h4 class="mb-0">🌐 Đăng nhập bằng dịch vụ khác</h4>
                </div>
                <div class="card-body text-center">
                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <p class="text-muted">
                            Không có dịch vụ xác thực ngoài nào được cấu hình.<br />
                            <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">Xem hướng dẫn cấu hình đăng nhập ngoài</a>.
                        </p>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-primary m-2" name="provider" value="@provider.Name">
                                    🔐 @provider.DisplayName
                                </button>
                            }
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
